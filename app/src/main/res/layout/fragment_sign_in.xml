<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_400"
        android:background="@drawable/bg_sign_in"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_boarding_splash_icon" />

        <TextView
            android:id="@+id/AndroidNews"
            style="@style/style_roboto_sp_48"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:lineSpacingExtra="-15dp"
            android:text="@string/mobile_news"
            android:textAllCaps="true" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayoutSignIn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/dp_120">

        <ImageButton
            android:id="@+id/signInImageButton"
            android:layout_width="@dimen/dp_330"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:background="@drawable/bg_rounded_orange_button"
            android:contentDescription="@string/sign_in_with_google"
            android:paddingStart="@dimen/dp_28"
            android:paddingEnd="@dimen/dp_290"
            android:src="@drawable/ic_logo_google"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/signInWithGoogleTextView"
            style="@style/style_roboto_bold_sp_20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_0"
            android:gravity="center"
            android:text="@string/sign_in_with_google" />

    </FrameLayout>

</LinearLayout>